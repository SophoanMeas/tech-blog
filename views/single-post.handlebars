<div class="post">
  <div class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{post.title}}</h2>
      <div>
        Posted by {{post.user.username}} on {{format_date post.created_at}}
      </div>
    </div>
    <div class="card-body">
      {{post.post_text}}
    </div>
  </div>

  {{#if post.comments}}
    <section class="card">
      <div class="card-header">
        <h2>Comments</h2>
      </div>
      <div class="card-body">
    {{>comment}}
      </div>
    </section>
  {{/if}}

  

  
  <form id="comment-form" class="card">
    <div class="card-header">
          <h2>Add New Comment</h2>
    </div>
    <div class="card-body">
       <input type="hidden" id="post-id" value="{{post.id}}" />
      <label class="form-label" for="comment-body">Comment</label>
      <textarea name="comment-body" id="comment-body" class="form-input"></textarea>
      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>